{
    "version": "2.0.0",
    "tasks": [
        {
            // Use a simple, custom label that matches your launch.json
            "label": "build", 
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe", // Use g++ for C++ files
            "args": [
                "-g",
                "-Wall",
                "-std=c++17",
                
                // *** CRITICAL FIX: LIST ALL YOUR SOURCE FILES (.cpp) HERE ***
                "${workspaceFolder}\\main.cpp",             
                "${workspaceFolder}\\LinkedList.cpp",       
                "${workspaceFolder}\\DoublyLinkedList.cpp", 
                "${workspaceFolder}\\Student.cpp",          
                "${workspaceFolder}\\BST.cpp",
                // Add any other .cpp files here!
                
                "-o",
                "${workspaceFolder}\\program.exe" // The output executable name
            ],
            "options": {
                "cwd": "${workspaceFolder}" // Set CWD to the project root
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Custom task to compile all project source files."
        }
    ]
}